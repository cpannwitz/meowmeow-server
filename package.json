{
  "name": "meowmeow-server",
  "version": "0.1.0",
  "description": "MeowMeow is a card game for friends.",
  "author": {
    "email": "ch.von.pa@googlemail.com",
    "name": "Christian Pannwitz",
    "url": "https://pnwtz.me"
  },
  "main": "./dist/index.js",
  "license": "MIT",
  "engines": {
    "node": ">=10.8.0",
    "yarn": "1.x"
  },
  "scripts": {
    "start": "NODE_ENV=production node --optimize_for_size --max_old_space_size=460 --gc_interval=100 ./dist/index.js",
    "start:dev": "NODE_ENV=development nodemon --exec ts-node --files src/index.ts",
    "build": "NODE_ENV=production npm-run-all clean tsc copy:static",
    "copy:static": "cp -R src/static dist",
    "tsc": "tsc",
    "clean": "rimraf ./dist"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "connect-timeout": "^1.9.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-status-monitor": "^1.2.7",
    "express-winston": "^4.0.1",
    "firebase-admin": "^8.8.0",
    "helmet": "^3.21.2",
    "morgan": "^1.9.1",
    "rollbar": "^2.14.4",
    "route-cache": "^0.4.4",
    "serve-favicon": "^2.5.0",
    "uuid": "^3.3.3",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/compression": "^1.0.1",
    "@types/connect-timeout": "^0.0.34",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.2",
    "@types/express-status-monitor": "^1.2.0",
    "@types/helmet": "^0.0.45",
    "@types/node": "^12.12.11",
    "@types/serve-favicon": "^2.2.31",
    "@types/uuid": "^3.4.6",
    "@typescript-eslint/eslint-plugin": "^2.8.0",
    "@typescript-eslint/parser": "^2.8.0",
    "eslint": "^6.6.0",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-security": "^1.4.0",
    "nodemon": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.0",
    "ts-node": "8.5.2",
    "typescript": "3.7.2"
  }
}
